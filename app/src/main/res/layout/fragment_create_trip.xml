<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tripdazzle.daycation.ui.createtrip.CreateTripViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_beach_ball_24dp"
                android:drawablePadding="4dp"
                android:hint="Name"
                android:text="@={viewModel.trip.title}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place_gray_24dp"
                android:drawablePadding="4dp"
                android:hint="Location"
                android:text="@={viewModel.trip.location}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_short_text_gray_24dp"
                android:drawablePadding="4dp"
                android:hint="Description"
                android:maxLength="160"
                android:maxLines="5"
                android:minLines="3"
                android:singleLine="false"
                android:text="@={viewModel.trip.description}" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src='@{viewModel.trip.mainImage.getDrawable(context), default="@drawable/side_nav_bar"}'
            tools:visibility="gone" />

        <Button
            android:id="@+id/createTripSelectImageButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_add_a_photo_gray_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|end"
            android:paddingStart="120dp"
            android:paddingEnd="120dp"
            android:text="Select Image" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Activities"
            android:textSize="18sp" />

    </LinearLayout>
</layout>