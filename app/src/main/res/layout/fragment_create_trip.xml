<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.tripdazzle.daycation.ui.createtrip.CreateTripViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="title"
                android:text="@={viewModel.trip.title}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="location"
                android:text="@={viewModel.trip.location}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createTripDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description"
                android:maxLines="5"
                android:minLines="2"
                android:singleLine="false"
                android:text="@={viewModel.trip.description}" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src='@{viewModel.trip.mainImage.getDrawable(context), default="@drawable/side_nav_bar"}' />

        <Button
            android:id="@+id/createTripSelectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image" />

    </LinearLayout>
</layout>