<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

<data>
        <variable
            name="user"
            type="com.tripdazzle.daycation.models.User" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/side_nav_bar"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <include
            android:id="@+id/tripInfoCreatorProfilePic"
            layout="@layout/layout_profile_pic_rounded"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            bind:cornerRadiusDP='@{30}'
            bind:profilePic="@{user.profilePicture}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text='@{user.firstName + " " + user.lastName, default="Firstname Lastname"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{user.city, default="City, State"}' />

    </LinearLayout>
</layout>